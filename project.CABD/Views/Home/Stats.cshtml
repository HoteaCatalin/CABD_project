@model project.CABD.Models.CarStatistics
@{
    Layout = null;
}
<!DOCTYPE html>


<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Stats</title>
    <style>
        th, td {
            padding: 10px;
            text-align: left;
            border-bottom: 1px solid #ddd;
            font-family: "Trebuchet MS", Arial, Helvetica, sans-serif;
            border-collapse: collapse;
            width: 10%;
        }

        tr:hover {
            background-color: #f5f5f5;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        th {
            background-color: #4CAF50;
            color: white;
        }
        a.button {
            font: bold 20px;
            font-family: "Trebuchet MS", Arial, Helvetica, sans-serif;
            text-decoration: none;
            background-color: #4CAF50;
            color: white;
            padding: 2px 6px 2px 6px;
            border-top: 1px solid #CCCCCC;
            border-right: 1px solid #333333;
            border-bottom: 1px solid #333333;
            border-left: 1px solid #CCCCCC;
            text-indent: -9999px;
        }
    </style>
</head>
<body>
    <p style="text-align:center; color:black; font-style:italic; font-size:24px"> Masina a avut pretul minim de @Model.MinPret timp de @Model.MinDurata minute</p>
    <div>

    </div>
    <br />
    <br />
    <p style="text-align:center; color:black; font-style:italic; font-size:24px">Variatii de pret</p>
    <div>

        <table class="table">
            <tr>
                <th>
                    Pret
                </th>
                <th>
                    Data modificare
                </th>
            </tr>
            @foreach (var item in Model.Variatii)
            {
                <tr>
                    <td>
                        $@Html.DisplayFor(modelItem => item.Key)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Value)
                    </td>
                </tr>
            }
        </table>
    </div>
    <br />
    <div>
        @Html.ActionLink("Back to List", "Index", null, new { @class = "button" })
    </div>
</body>
</html>